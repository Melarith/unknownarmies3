                  <label for="isNameKnown" style="display: flex; align-items: center; padding: 2px; cursor: pointer;">
                    <input class="actorFlag" id="isNameKnown" type="checkbox" value="1" style="margin: 0; padding: 0; flex: none;" {{#if system.flags.isNameKnown}}checked{{/if}}><span style="margin-left: 10px; font-size: 1.1em">Is Name Known?</span>
