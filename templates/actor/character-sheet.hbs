<form class="{{cssClass}}" autocomplete="off">
  <nav class='flexrow tabbed round' data-group='primary' style="width: 100%; background-color: rgba(240, 240, 240, 0.1);" id='char-tabs'>
    <ul>
      <li data-tab="notes">&nbsp;Notes&nbsp;</li>
      <li data-tab="magick">&nbsp;Magick&nbsp;</li>
      <li data-tab="trauma">&nbsp;Trauma&nbsp;</li>
      <li data-tab="character" class="active">&nbsp;Profile&nbsp;</li>
